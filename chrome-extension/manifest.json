{
  "manifest_version": 3,
  "name": "HH TextGen",
  "version": "1.1",
  "description": "Генератор рекламных текстов для HR",
  "permissions": ["storage", "sidePanel", "activeTab", "scripting"],
  "host_permissions": [
    "https://llmgtw.hhdev.ru/*",
    "https://api.hh.ru/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_title": "HH TextGen"
  },
  "icons": {
    "48": "hh-logo.png",
    "128": "hh-logo.png"
  }
}
